<div class="md-modal md-effect" id="modal">
    <div class="md-content">
        <div class="modal--header">
            <h4 class="title bold">Log In</h4>
            <div class="modal--close">
                <div class="button" role="button" tabindex="0">
                    <div class="button--content"><span class="icon"><i class="fa fa-close h3"></i></span></div>
                </div>
            </div>
        </div>
        <div class="modal--body">
            <div class="modal-auth--social-button -facebook">
                <div class="button" role="button" tabindex="0">
                    <div class="button--content"><span class="icon"><i class="fa fa-facebook h3"></i></span>
                        <span class="button--name">Facebook</span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-4">
                    <div class="modal-auth--social-button -github">
                        <div class="button" role="button" tabindex="0">
                            <div class="button--content"><span class="icon"><i class="fa fa-github h2"></i></span></div>
                        </div>
                    </div>
                </div>
                <div class="col-4">
                    <div class="modal-auth--social-button -google">
                        <div class="button" role="button" tabindex="0">
                            <div class="button--content"><span class="icon"><i class="fa fa-google-plus h3"></i></span></div>
                        </div>
                    </div>
                </div>
                <div class="col-4">
                    <div class="modal-auth--social-button -twitter">
                        <div class="button" role="button" tabindex="0">
                            <div class="button--content"><span class="icon"><i class="fa fa-twitter h2 text-white"></i></span></div>
                        </div>
                    </div>
                </div>
            </div>
            <hr>
            <div class="login">
                <div class="input">
                    <span class="input--label">Email</span>
                    <div class="input--wrapper">
                        <input type="email" name="email">
                    </div>
                </div>
                <div class="input">
                    <span class="input--label">Password</span>
                    <div class="input--wrapper">
                        <input type="password" name="password">
                    </div>
                </div>
                <span class="modal-auth--forgot-password">Forgot Password</span>
                <div class="warning hidden">Wrong Password!</div>
            </div>
            <div class="signup hidden">
                <div class="input">
                    <span class="input--label">Username</span>
                    <div class="input--wrapper">
                        <input type="text" name="username">
                    </div>
                </div>
                <div class="input">
                    <span class="input--label">Email</span>
                    <div class="input--wrapper">
                        <input type="email" name="email">
                    </div>
                </div>
                <div class="input">
                    <span class="input--label">Password</span>
                    <div class="input--wrapper">
                        <input type="password" name="password">
                    </div>
                </div>
                <div class="warning hidden">Signup failed!</div>
            </div>
        </div>
        <div class="modal--footer clearfix">
            <div class="col-5">
                <a class="button text-gray text-left" name="signup">Sign Up</a>
                <a class="button text-gray text-left hidden" name="login">Login</a>
            </div>
            <div class="col-2">
                <button type="button" name="skip" id="skip">Skip</button>
            </div>
            <div class="col-5 text-right">
                <a class="button text-info text-right" id="login">Log In</a>
                <a class="button text-info text-right hidden" id="signup">Sign up</a>
            </div>
        </div>
    </div>
</div>
<div class="md-overlay"></div>